NODE_ENV=production
PORT=5000

# JWT Settings
JWT_SECRET=replace-with-a-long-random-string
JWT_EXPIRE=7d

# SMTP / Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password
SMTP_FROM="EduBridge Alerts" <your-email@example.com>

# Optional: public URL of the backend (used in emails)
APP_BASE_URL=https://your-backend-domain.com
